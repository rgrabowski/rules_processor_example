<%= form_for(ticket) do |f| %>
    <% if ticket.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

          <ul>
            <% ticket.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :requester_id %>
      <%= f.collection_select :requester_id, User.all, :id, :name %>
    </div>


    <div class="field">
      <%= f.label :status %>
      <%= f.select :status, options_for_select(Ticket::STATUSES) %>
    </div>

    <div class="field">
      <%= f.label :priority %>
      <%= f.select :priority, options_for_select(Ticket::PRIORITIES) %>
    </div>

    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
