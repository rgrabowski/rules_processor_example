<%= form_for(ticket) do |f| %>
    <% if ticket.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

          <ul>
            <% ticket.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :requester_id %>
      <%= f.collection_select :requester_id, User.all, :id, :name, {}, class: 'custom-select form-control' %>
    </div>


    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, options_for_select(Ticket::STATUSES, selected: ticket.status),{}, class: 'select-custom form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select :priority, options_for_select(Ticket::PRIORITIES, selected: ticket.priority),{}, class: 'custom-select form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-success' %>
    </div>
<% end %>
